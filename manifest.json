{
    "version": "1.1.1",
    "manifest_version": 2,
    "icons": {
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "User-Agent Switcher"
    },
    "background": {
        "scripts": [ "background.js" ]
    },
    "description": "User-Agent switcher that allows you to build your own User-Agent with pieces of your origial one",
    "minimum_chrome_version": "20.0",
    "name": "User-Agent Switcher",
    "permissions": [ "webRequest", "webRequestBlocking", "storage", "<all_urls>" ]
}
